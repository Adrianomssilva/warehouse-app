<h1>Fornecedores</h1>
<div><%= link_to  "Novo Fornecedor", new_supplier_path %></div>
<% if @suppliers.any? %>
  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Localização</th>
      </tr>
    </thead>
    <tbody>
      <%@suppliers.each do |supplier|%>
      <tr>
        <td><%=link_to supplier.brand_name, supplier%></td>
        <td><%=supplier.city%> - <%=supplier.state%></td>
      </tr>
      <% end %>
  </tbody>
  </table>
  <% else %>
  <p>Não existem fornecedores cadastrados</p>
<% end %>

